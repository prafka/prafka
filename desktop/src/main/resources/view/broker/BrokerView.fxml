<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="paneRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.broker.BrokerController">
    <VBox styleClass="content-block" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <BorderPane styleClass="content-block-header">
            <left>
                <HBox alignment="CENTER_LEFT">
                    <Label fx:id="labelH1Comeback" styleClass="h1, h1-comeback" text="%common.brokers"/>
                    <Label styleClass="h1, h1-separator" text="  /  "/>
                    <Label fx:id="labelH1" styleClass="h1" />
                </HBox>
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT">
                    <Button styleClass="primary" visible="false" />
                </HBox>
            </right>
        </BorderPane>
        <HBox styleClass="pd-t-1"/>
        <TabPane VBox.vgrow="ALWAYS" fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="tabConfiguration" text="%common.configuration" />
            <Tab fx:id="tabLogDirs" text="%common.logDirs" />
        </TabPane>
    </VBox>
</AnchorPane>
