<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="paneRoot" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.broker.EditBrokerConfigController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <ScrollPane styleClass="root-background" fitToWidth="true" fitToHeight="true">
                <GridPane alignment="CENTER">
                    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER_LEFT">
                        <VBox styleClass="info-block">
                            <Label fx:id="labelInfoTitle" styleClass="title" />
                            <Label fx:id="labelInfoContent" styleClass="content" wrapText="true"/>
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </VBox>
                        <Label text="%common.defaultValue" styleClass="font-medium">
                            <VBox.margin>
                            <Insets bottom="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="textFieldDefaultValue" focusTraversable="false" editable="false">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </TextField>
                        <Label text="%common.currentValue" styleClass="font-medium">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="textFieldCurrentValue" focusTraversable="false" editable="false"/>
                        <GridPane.margin>
                            <Insets bottom="20.0" top="20.0" />
                        </GridPane.margin>
                    </VBox>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="80" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
            </ScrollPane>
        </center>
        <bottom>
            <HBox alignment="CENTER_RIGHT" styleClass="button-block">
                <Button fx:id="buttonCancel" mnemonicParsing="false" styleClass="secondary" text="%common.cancel"/>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
