<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="paneRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.topic.TopicListController">
    <VBox styleClass="content-block" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <BorderPane styleClass="content-block-header">
            <left>
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="h1" text="%common.topics"/>
                </HBox>
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="buttonEmptyTopics" focusTraversable="false" mnemonicParsing="false" styleClass="secondary" visible="false" text="%topic.emptyTopics"/>
                    <Button fx:id="buttonDeleteTopics" focusTraversable="false" mnemonicParsing="false" styleClass="secondary" visible="false" text="%topic.deleteTopics"/>
                    <Button fx:id="buttonCreateTopic" focusTraversable="false" mnemonicParsing="false" styleClass="primary" text="%topic.createTopic"/>
                </HBox>
            </right>
        </BorderPane>
        <HBox styleClass="pd-t-0_5"/>
        <FlowPane fx:id="paneSummaryBlock" styleClass="summary-block" alignment="CENTER_LEFT" hgap="15" vgap="10" />
        <HBox styleClass="pd-t-1"/>
        <VBox styleClass="content-block-main" VBox.vgrow="ALWAYS">
            <HBox fx:id="paneFilterBlock" alignment="CENTER_LEFT" styleClass="filter-block">
                <TextField fx:id="textFieldSearch" focusTraversable="false" prefWidth="300.0" promptText="%common.search">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </TextField>
                <CheckBox fx:id="checkBoxShowInternalTopics" focusTraversable="false" text="%topicListView.checkBoxShowInternalTopics">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </CheckBox>
                <CheckBox fx:id="checkBoxShowStreamTopics" focusTraversable="false" text="%topicListView.checkBoxShowStreamTopics"/>
            </HBox>
            <StackPane VBox.vgrow="ALWAYS">
                <TableView fx:id="tableView" focusTraversable="false">
                    <placeholder>
                        <Label fx:id="labelEmptyTableView"/>
                    </placeholder>
                </TableView>
                <ProgressIndicator fx:id="progressIndicator" maxWidth="32" maxHeight="32"/>
            </StackPane>
        </VBox>
    </VBox>
</AnchorPane>
