<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="paneRoot" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.topic.CreateTopicController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <ScrollPane styleClass="root-background" fitToWidth="true" fitToHeight="true">
                <GridPane alignment="CENTER">
                    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <HBox>
                            <Label text="%common.name" styleClass="font-medium" />
                            <Label text=" *" styleClass="font-medium, font-red" />
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </HBox>
                        <TextField fx:id="textFieldName" />
                        <Label text="%createTopicView.labelNameDescription" styleClass="label-desc">
                            <VBox.margin>
                                <Insets top="3.0" />
                            </VBox.margin>
                        </Label>
                        <GridPane>
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0">
                                <HBox>
                                    <Label text="%common.partitions" styleClass="font-medium" />
                                    <Label text=" *" styleClass="font-medium, font-red" />
                                    <VBox.margin>
                                        <Insets bottom="5.0" />
                                    </VBox.margin>
                                </HBox>
                                <TextField fx:id="textFieldPartitions" />
                                <GridPane.margin>
                                    <Insets right="10"/>
                                </GridPane.margin>
                            </VBox>
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1">
                                <HBox>
                                    <Label text="%common.replicationFactor" styleClass="font-medium" />
                                    <Label text=" *" styleClass="font-medium, font-red" />
                                    <VBox.margin>
                                        <Insets bottom="5.0" />
                                    </VBox.margin>
                                </HBox>
                                <StackPane>
                                    <TextField fx:id="textFieldReplicationFactor" />
                                    <ProgressIndicator fx:id="progressIndicatorReplicationFactor" maxWidth="20" maxHeight="20" />
                                </StackPane>
                                <GridPane.margin>
                                    <Insets left="10"/>
                                </GridPane.margin>
                            </VBox>
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </GridPane>
                        <Label text="%createTopicView.labelCleanupPolicy" styleClass="font-medium">
                            <VBox.margin>
                                <Insets bottom="5.0" top="20.0" />
                            </VBox.margin>
                        </Label>
                        <HBox>
                            <RadioButton fx:id="radioButtonCleanupPolicyDelete" mnemonicParsing="false" selected="true" text="%createTopicView.radioButtonCleanupPolicyDelete">
                                <toggleGroup>
                                    <ToggleGroup fx:id="toggleGroupCleanupPolicy" />
                                </toggleGroup>
                                <HBox.margin>
                                    <Insets right="10.0" />
                                </HBox.margin>
                            </RadioButton>
                            <RadioButton fx:id="radioButtonCleanupPolicyCompact" mnemonicParsing="false" text="%createTopicView.radioButtonCleanupPolicyCompact" toggleGroup="$toggleGroupCleanupPolicy">
                                <HBox.margin>
                                    <Insets right="10.0" />
                                </HBox.margin>
                            </RadioButton>
                            <RadioButton fx:id="radioButtonCleanupPolicyDeleteAndCompact" mnemonicParsing="false" text="%createTopicView.radioButtonCleanupPolicyDeleteAndCompact" toggleGroup="$toggleGroupCleanupPolicy" />
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </HBox>
                        <Label text="%common.advancedConfiguration" styleClass="font-medium">
                            <VBox.margin>
                                <Insets bottom="5.0" top="20.0" />
                            </VBox.margin>
                        </Label>
                        <GridPane fx:id="paneAdvancedConfiguration">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            </columnConstraints>
                        </GridPane>
                        <TitledPane animated="false" expanded="false" focusTraversable="false" text="%common.additionalProperties" styleClass="titled-pane-font-medium">
                            <VBox>
                                <TextArea fx:id="textAreaAdditionalProperties" minHeight="150" promptText="key=value" />
                            </VBox>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </TitledPane>
                        <GridPane.margin>
                            <Insets bottom="20.0" top="20.0" />
                        </GridPane.margin>
                    </VBox>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="80" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
            </ScrollPane>
        </center>
        <bottom>
            <HBox alignment="CENTER_RIGHT" styleClass="button-block" spacing="10">
                <StackPane alignment="CENTER_RIGHT">
                    <HBox fx:id="paneAlert" alignment="CENTER_RIGHT" />
                    <ProgressIndicator fx:id="progressIndicatorButtonBlock" maxHeight="20" maxWidth="20" visible="false" />
                </StackPane>
                <Button fx:id="buttonCancel" mnemonicParsing="false" styleClass="secondary" text="%common.cancel" />
                <Button fx:id="buttonCreateTopic" mnemonicParsing="false" styleClass="primary" text="%topic.createTopic" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
