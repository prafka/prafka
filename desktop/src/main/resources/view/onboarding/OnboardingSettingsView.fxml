<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="paneRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.onboarding.OnboardingSettingsController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <ScrollPane styleClass="root-background" fitToWidth="true" fitToHeight="true">
                <GridPane alignment="CENTER">
                    <VBox fx:id="paneContent" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER_LEFT">
                        <Label text="%onboardingSettingsView.selectLanguage" styleClass="font-medium">
                            <VBox.margin>
                                <Insets bottom="5"/>
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="comboBoxSelectLanguage" />
                        <Label styleClass="label-desc" text="%onboardingSettingsView.selectLanguageDescription">
                            <VBox.margin>
                                <Insets top="3"/>
                            </VBox.margin>
                        </Label>
                        <Label text="%onboardingSettingsView.selectTheme" styleClass="font-medium">
                            <VBox.margin>
                                <Insets top="20" bottom="5"/>
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="comboBoxSelectTheme" />
                        <Label styleClass="label-desc" text="%onboardingSettingsView.selectThemeDescription">
                            <VBox.margin>
                                <Insets top="3"/>
                            </VBox.margin>
                        </Label>
                        <CheckBox fx:id="checkBoxCollectAnalytics" selected="true" text="%onboardingSettingsView.collectAnalytics">
                            <VBox.margin>
                                <Insets top="20" />
                            </VBox.margin>
                        </CheckBox>
                        <Label styleClass="label-desc" text="%onboardingSettingsView.collectAnalyticsDescription">
                            <VBox.margin>
                                <Insets top="3"/>
                            </VBox.margin>
                        </Label>
                        <GridPane.margin>
                            <Insets bottom="20.0" top="20.0" />
                        </GridPane.margin>
                    </VBox>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="80" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
            </ScrollPane>
        </center>
        <bottom>
            <HBox alignment="CENTER_RIGHT" styleClass="button-block" spacing="10">
                <ProgressIndicator fx:id="progressIndicator" maxHeight="20" maxWidth="20" visible="false" />
                <Button fx:id="buttonCancel" mnemonicParsing="false" styleClass="secondary" text="%common.cancel" />
                <Button fx:id="buttonNext" mnemonicParsing="false" styleClass="primary" text="%common.next" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
