<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="paneRoot" styleClass="pd-t-1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prafka.desktop.controller.schema.registry.SchemaTabStructureController">
    <VBox styleClass="content-block-main" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <BorderPane fx:id="paneFilterBlock" styleClass="filter-block">
            <left>
                <ComboBox fx:id="comboBoxVersion" prefWidth="300.0" focusTraversable="false" promptText="%common.selectVersion" />
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button fx:id="buttonEdit" focusTraversable="false" styleClass="secondary-outline" text="%schema.updateSchema" />
                    <Button fx:id="buttonDelete" focusTraversable="false" styleClass="secondary-outline" text="%schema.deleteVersion" />
                </HBox>
            </right>
        </BorderPane>
        <StackPane VBox.vgrow="ALWAYS">
            <TreeTableView fx:id="treeTableView" showRoot="false" focusTraversable="false">
                <placeholder><Label fx:id="labelEmptyTableView" /></placeholder>
            </TreeTableView>
            <ProgressIndicator fx:id="progressIndicator" maxWidth="32" maxHeight="32" />
        </StackPane>
    </VBox>
</AnchorPane>
